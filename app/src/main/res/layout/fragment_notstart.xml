<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nostart_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:text="新冠肺炎"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nostart_img_title"
                android:layout_width="22dp"
                android:layout_height="10dp"
                android:layout_alignBottom="@+id/nostart_tv_title"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/nostart_tv_title"
                android:background="@drawable/bg_item_affirm"
                android:layout_marginBottom="4dp"
                android:text="确诊"
                android:textColor="#ffffff"
                android:textSize="6sp"
                android:gravity="center"/>


            <TextView
                android:id="@+id/nostart_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:paddingRight="26dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="2020-3-14 10:30:00"
                android:textColor="#929292"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/nostart_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:text="陈某某"
                android:textColor="#0054e0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nostart_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="28dp"
                android:layout_alignParentRight="true"
                android:paddingRight="26dp"
                android:ellipsize="end"
                android:maxEms="18"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:text="北京市朝阳区豆各庄社区卫生局服务中心"
                android:textColor="#929292"
                android:textSize="14sp" />

            <View
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/jump" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>