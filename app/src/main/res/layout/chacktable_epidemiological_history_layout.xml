<?xml version="1.0" encoding="utf-8"?>
<!--第四部分流行病学史-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chechtable_epidemiological_history_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rd12_gray_square"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <RelativeLayout
        android:id="@+id/infection_source_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/infection_source_tv"
            style="@style/info_textview"
            android:text="@string/infection_source"
            android:textColor="@color/red"/>
        <EditText
            android:id="@+id/infection_source_edit"
            style="@style/info_edittext"
            android:layout_toRightOf="@+id/infection_source_tv"
            android:focusable="false"
            android:layout_toLeftOf="@+id/infection_sourcearrow"/>
        <ImageView
            android:id="@+id/infection_sourcearrow"
            style="@style/info_arrow"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        style="@style/info_line"/>
    <RelativeLayout
        android:id="@+id/transport_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/transport_tv"
            style="@style/info_textview"
            android:text="@string/transport"
            android:textColor="@color/red"/>
        <EditText
            android:id="@+id/transport_edit"
            style="@style/info_edittext"
            android:layout_toRightOf="@+id/transport_tv"
            android:focusable="false"
            android:layout_toLeftOf="@+id/transport_arrow"/>
        <ImageView
            android:id="@+id/transport_arrow"
            style="@style/info_arrow"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        style="@style/info_line"/>
    <RelativeLayout
        android:id="@+id/reveal_history_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/reveal_history_tv"
            style="@style/info_textview"
            android:text="@string/reveal_history"
            android:textColor="@color/red"/>
        <EditText
            android:id="@+id/reveal_history_edit"
            style="@style/info_edittext"
            android:layout_toRightOf="@+id/reveal_history_tv"
            android:focusable="false"
            android:layout_toLeftOf="@+id/reveal_historyarrow"/>
        <ImageView
            android:id="@+id/reveal_historyarrow"
            style="@style/info_arrow"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        style="@style/info_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            style="@style/info_textview"
            android:text="@string/is_aggregation"/>
        <EditText
            android:id="@+id/is_aggregation_edit"
            style="@style/info_edittext"/>
    </LinearLayout>
    <View
        style="@style/info_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            style="@style/info_textview"
            android:text="@string/aggregation_number"/>
        <EditText
            android:id="@+id/aggregation_number_edit"
            style="@style/info_edittext"/>
    </LinearLayout>
    <View
        style="@style/info_line"/>
    <LinearLayout
        android:id="@+id/baseinfo_hide_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                style="@style/info_textview"
                android:text="@string/aggregation_address"/>
            <EditText
                android:id="@+id/aggregation_address_edit"
                style="@style/info_edittext"/>
        </LinearLayout>
        <View
            style="@style/info_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                style="@style/info_textview"
                android:text="@string/aggregation_mode"/>
            <EditText
                android:id="@+id/aggregation_mode_edit"
                style="@style/info_edittext"/>
        </LinearLayout>
        <View
            style="@style/info_line"/>
        <RelativeLayout
            android:id="@+id/is_famlily_member_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/is_famlily_member_tv"
                style="@style/info_textview"
                android:text="@string/is_famlily_member"
                android:textColor="@color/red"/>
            <EditText
                android:id="@+id/info_diagnosesource_edit"
                style="@style/info_edittext"
                android:layout_toRightOf="@+id/is_famlily_member_tv"
                android:layout_toLeftOf="@+id/is_famlily_member_arrow"
                android:focusable="false"/>
            <ImageView
                android:id="@+id/is_famlily_member_arrow"
                style="@style/info_arrow"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            style="@style/info_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                style="@style/info_textview"
                android:text="@string/previous_ralationship"/>
            <EditText
                android:id="@+id/previous_ralationship_edit"
                style="@style/info_edittext"/>
        </LinearLayout>
        <View
            style="@style/info_line"/>
        <RelativeLayout
            android:id="@+id/case_style_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/case_style_tv"
                style="@style/info_textview"
                android:text="@string/case_style"/>
            <EditText
                android:id="@+id/info_casetype_edit"
                style="@style/info_edittext"
                android:layout_toRightOf="@+id/case_style_tv"
                android:layout_toLeftOf="@+id/case_style_arrow"
                android:focusable="false"/>
            <ImageView
                android:id="@+id/case_style_arrow"
                style="@style/info_arrow"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            style="@style/info_line"/>
        <RelativeLayout
            android:id="@+id/first_expose_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/first_expose_tv"
                style="@style/info_textview"
                android:text="@string/first_expose"/>
            <EditText
                android:id="@+id/first_expose_edit"
                style="@style/info_edittext"
                android:layout_toRightOf="@+id/first_expose_tv"
                android:layout_toLeftOf="@+id/first_expose_arrow"
                android:focusable="false"/>
            <ImageView
                android:id="@+id/first_expose_arrow"
                style="@style/info_arrow"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            style="@style/info_line"/>
        <RelativeLayout
            android:id="@+id/last_expose_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/last_expose_tv"
                style="@style/info_textview"
                android:text="@string/last_expose"/>
            <EditText
                android:id="@+id/info_patientsbelong_edit"
                style="@style/info_edittext"
                android:layout_toRightOf="@+id/last_expose_tv"
                android:layout_toLeftOf="@+id/last_expose_arrow"
                android:focusable="false"/>
            <ImageView
                android:id="@+id/last_expose_arrow"
                style="@style/info_arrow"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            style="@style/info_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                style="@style/info_textview"
                android:text="@string/longest_period"/>
            <EditText
                android:id="@+id/longest_period_edit"
                style="@style/info_edittext"/>
        </LinearLayout>
        <View
            style="@style/info_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                style="@style/info_textview"
                android:text="@string/shortest_period"/>
            <EditText
                android:id="@+id/shortest_period_edit"
                style="@style/info_edittext"/>
        </LinearLayout>
        <View
            style="@style/info_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                style="@style/info_textview"
                android:text="@string/medical_duration"/>
            <EditText
                android:id="@+id/medical_duration_edit"
                style="@style/info_edittext"/>
        </LinearLayout>
        <View
            style="@style/info_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                style="@style/info_textview"
                android:text="@string/diagnosis_duration"/>
            <EditText
                android:id="@+id/diagnosis_duration_edit"
                style="@style/info_edittext"/>
        </LinearLayout>
        <View
            style="@style/info_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                style="@style/info_textview"
                android:text="@string/passage_duration"/>
            <EditText
                android:id="@+id/passage_duration_edit"
                style="@style/info_edittext"/>
        </LinearLayout>
        <View
            style="@style/info_line"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourth_open_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/fourth_open_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/blue_down_arrow"
            android:scaleType="fitCenter"/>
    </LinearLayout>
</LinearLayout>
