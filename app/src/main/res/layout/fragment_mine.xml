<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f7ff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/linear_user_top"
        android:layout_weight="5" >

        <RelativeLayout
            android:id="@+id/login_in"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/main_setting_my_top_bg" >
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/main_setting_my_img_top_l" />

            <ImageView
                android:id="@+id/img_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/main_user_top_avatar" />
            <TextView
                android:id="@+id/tvusername"
                android:layout_below="@+id/img_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="小明"/>
            <LinearLayout
                android:id="@+id/linear_phone"
                android:layout_below="@id/tvusername"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="7dp"
                    android:layout_gravity="center"
                    android:src="@drawable/main_setting_item_phone_img"/>
                <TextView
                    android:id="@+id/tvphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:textSize="15dp"
                    android:text="15711234503"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner_dl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dip"
                android:layout_toRightOf="@id/img_tx"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/jdymc_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/jdymc_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical" >
        <RelativeLayout
            android:id="@+id/rljbxx"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/listview_selector"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivjbxx"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:src="@drawable/main_setting_item_jbxx_img"/>
            <TextView
                android:id="@+id/tvjbxx"
                android:layout_toRightOf="@+id/ivjbxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="基本信息"
                android:textColor="@color/blackA6E"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/main_setting_item_jiantou_img"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlfwqsz"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginTop="5dp"
            android:background="@drawable/listview_selector"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivfwq"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:src="@drawable/main_setting_item_jbxx_img"/>
            <TextView
                android:id="@+id/tvfwq"
                android:layout_toRightOf="@+id/ivfwq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="服务器设置"
                android:textColor="@color/blackA6E"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvfwqdz"
                android:visibility="gone"
                android:layout_toRightOf="@+id/tvfwq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="请选择"
                android:textColor="@color/gray_server"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/main_setting_item_jiantou_img"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlbbrz"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginTop="5dp"
            android:background="@drawable/listview_selector"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivxtbj"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:src="@drawable/main_setting_item_yjfk_img"/>
            <TextView
                android:id="@+id/tvxtbj"
                android:layout_toRightOf="@+id/ivxtbj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="更新日志"
                android:textColor="@color/blackA6E"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/main_setting_item_jiantou_img"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlyjfk"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:background="@drawable/listview_selector"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivyjfk"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:src="@drawable/main_setting_item_yjfk_img"/>
            <TextView
                android:id="@+id/tvyjfk"
                android:layout_toRightOf="@+id/ivyjfk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="意见反馈"
                android:textColor="@color/blackA6E"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/main_setting_item_jiantou_img"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlgywm"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/listview_selector"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivgywm"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:src="@drawable/main_setting_item_gywm_img" />

            <TextView
                android:id="@+id/tvgywm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/ivgywm"
                android:text="联系我们"
                android:textColor="@color/blackA6E"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35dp"
                android:src="@drawable/main_setting_item_jiantou_img" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:background="#f1f7ff"
        android:layout_weight="3"/>

</LinearLayout>