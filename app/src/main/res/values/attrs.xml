<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShimmerView">
        <attr name="reflectionColor" format="color"/>
    </declare-styleable>

    <!--转圈圈-->
    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension"/>
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension"/>
        <attr name="indicatorName" format="string"/>
        <attr name="indicatorColor" format="color"/>
    </declare-styleable>

    <!--昼夜模式主色调-->
    <attr name="dayNightBackground" format="color|reference" />
    <attr name="dayNightOneTextColor" format="color|reference" />
    <attr name="dayNightTwoTextColor" format="color|reference" />
    <attr name="dayNightThreeTextColor" format="color|reference" />
    <attr name="dayNightBackgroundDrawable" format="color|reference" />

    <declare-styleable name="DayNightMode">
        <attr name="dayNightBackgroundAttr" format="string|reference"/><!--切换背景属性-->
        <attr name="dayNightOneTextColorAttr" format="string|reference"/><!--切换一级字体颜色属性-->
        <attr name="dayNightTwoTextColorAttr" format="string|reference"/><!--切换二级字体颜色属性-->
        <attr name="dayNightThreeTextColorAttr" format="string|reference"/><!--切换三级字体颜色属性-->
        <attr name="dayNightBackgroundDrawableAttr" format="string|reference"/><!--切换背景图片属性-->
    </declare-styleable>

    <!-- 阴影立体按钮 -->
    <declare-styleable name="FButton">
        <attr name="shadowEnabled" format="boolean" />
        <attr name="buttonColor" format="color" />
        <attr name="shadowColor" format="color" />
        <attr name="shadowHeight" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>

    <!--SmoothCheckBox平滑的CheckBox begin-->
    <declare-styleable name="SmoothCheckBox">
        <attr name="duration" format="integer" />
        <attr name="stroke_width" format="dimension" />
        <attr name="color_tick" format="color" />
        <attr name="color_checked" format="color" />
        <attr name="color_unchecked" format="color" />
        <attr name="color_unchecked_stroke" format="color" />
    </declare-styleable>
    <!--SmoothCheckBox平滑的CheckBox end-->

    <attr name="Toolbar.bg" format="dimension" />

</resources>